<div class="ui-panel mx-auto max-w-md p-6">
  <% if @bootstrap_mode %>
    <h2 class="ui-heading">Create Operator Account</h2>
    <p class="ui-copy mt-2">
      Cullarr allows a single operator account. This setup screen is available only once.
    </p>

    <%= form_with model: @operator, url: session_path, class: "mt-6 space-y-4" do |form| %>
      <div>
        <%= form.label :email, class: "ui-copy mb-1 block font-medium" %>
        <%= form.email_field :email, required: true, class: "ui-control ui-text-body-sm" %>
      </div>
      <div>
        <%= form.label :password, class: "ui-copy mb-1 block font-medium" %>
        <%= form.password_field :password, required: true, class: "ui-control ui-text-body-sm" %>
      </div>
      <div>
        <%= form.label :password_confirmation, class: "ui-copy mb-1 block font-medium" %>
        <%= form.password_field :password_confirmation, required: true, class: "ui-control ui-text-body-sm" %>
      </div>
      <%= form.submit "Create Operator", class: "ui-button ui-button-primary ui-motion ui-motion-lift w-full" %>
    <% end %>
  <% else %>
    <h2 class="ui-heading">Sign In</h2>
    <p class="ui-copy mt-2">
      Authentication is required for all Cullarr operations.
    </p>

    <%= form_with scope: :session, url: session_path, class: "mt-6 space-y-4" do |form| %>
      <div>
        <%= form.label :email, class: "ui-copy mb-1 block font-medium" %>
        <%= form.email_field :email, required: true, value: @operator&.email, class: "ui-control ui-text-body-sm" %>
      </div>
      <div>
        <%= form.label :password, class: "ui-copy mb-1 block font-medium" %>
        <%= form.password_field :password, required: true, class: "ui-control ui-text-body-sm" %>
      </div>
      <%= form.submit "Sign In", class: "ui-button ui-button-primary ui-motion ui-motion-lift w-full" %>
    <% end %>
  <% end %>
</div>
