<!DOCTYPE html>
<html lang="en">
  <head>
    <title><%= content_for(:title) || "Cullarr" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="color-scheme" content="dark light">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <script>
      (() => {
        const DARK_CLASS = "theme-signal-dark"
        const LIGHT_CLASS = "theme-signal-light"
        const STORAGE_KEY = "cullarr-theme"
        const mediaQuery = window.matchMedia?.("(prefers-color-scheme: dark)")

        const storedTheme = () => {
          try {
            const theme = window.localStorage.getItem(STORAGE_KEY)
            return theme === "dark" || theme === "light" ? theme : null
          } catch (_error) {
            return null
          }
        }

        const resolvedTheme = () => {
          const theme = storedTheme()
          if (theme) return theme
          return mediaQuery?.matches ? "dark" : "light"
        }

        const applyTheme = (theme) => {
          const className = theme === "dark" ? DARK_CLASS : LIGHT_CLASS
          document.documentElement.classList.remove(DARK_CLASS, LIGHT_CLASS)
          document.documentElement.classList.add(className)
          document.documentElement.style.colorScheme = theme
          if (document.body) {
            document.body.classList.remove(DARK_CLASS, LIGHT_CLASS)
            document.body.classList.add(className)
          }
        }

        applyTheme(resolvedTheme())
        document.addEventListener("DOMContentLoaded", () => applyTheme(resolvedTheme()))

        if (mediaQuery) {
          const syncToSystem = () => {
            if (!storedTheme()) {
              applyTheme(resolvedTheme())
            }
          }

          if (typeof mediaQuery.addEventListener === "function") {
            mediaQuery.addEventListener("change", syncToSystem)
          } else if (typeof mediaQuery.addListener === "function") {
            mediaQuery.addListener(syncToSystem)
          }
        }
      })()
    </script>

    <%= favicon_link_tag "icon.png", type: "image/png" %>
    <%= favicon_link_tag "icon.svg", type: "image/svg+xml" %>
    <%= favicon_link_tag "icon.png", rel: "apple-touch-icon" %>

    <%# Explicitly include digest-resolved token stylesheets for Propshaft. %>
    <%= stylesheet_link_tag asset_path("application.css"),
                            asset_path("tailwind.css"),
                            asset_path("tokens/colors.css"),
                            asset_path("tokens/typography.css"),
                            asset_path("tokens/shape.css"),
                            asset_path("tokens/motion.css"),
                            asset_path("tokens/shell.css"),
                            asset_path("ui.css"),
                            "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="ui-app">
    <header class="ui-topbar">
      <div class="ui-topbar-inner">
        <div class="flex items-center gap-6">
          <h1 class="ui-brand">Cullarr</h1>
          <% if operator_signed_in? %>
            <nav class="ui-nav">
              <%= link_to "Dashboard", dashboard_path, class: "ui-nav-link ui-motion" %>
              <%= link_to "Candidates", candidates_path, class: "ui-nav-link ui-motion" %>
              <%= link_to "Settings", settings_path, class: "ui-nav-link ui-motion" %>
              <%= link_to "Runs", runs_path, class: "ui-nav-link ui-motion" %>
            </nav>
          <% end %>
        </div>
        <% if operator_signed_in? %>
          <%= form_with url: session_path, method: :delete do %>
            <%= render Ui::ButtonComponent.new(label: "Sign out", variant: :secondary, type: :submit) %>
          <% end %>
        <% end %>
      </div>
    </header>

    <main class="ui-shell-container ui-main">
      <% flash.each do |key, message| %>
        <% flash_classes = [ "ui-main-flash" ] %>
        <% flash_classes << "ui-main-flash-auth" unless operator_signed_in? %>
        <div class="<%= flash_classes.join(" ") %>">
          <%= render Ui::InlineAlertComponent.new(
            message: message,
            kind: Ui::InlineAlertComponent.kind_for_flash_key(key)
          ) %>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
